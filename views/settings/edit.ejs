<% include ../partials/header %>

<div class="ui main text container">
        <div class="completeregistrationheading">EDIT PROFILE</div>
        <form class="ui form form col-xs-12" action="/settings/<%=settings._id %>?_method=PUT" method="POST"> 
               
        <div class="field">
                <p class="settingsformfield"> <input type="text" name="editsettings[fullname]" placeholder="Firstname Surname" value="<%= settings.fullname %>"></p>
        </div>
        

        <div class="field">
                <p class="settingsformfield"><input type="text" name="editsettings[location]" placeholder="location (State)" value="<%= settings.location %>"></p>
        </div>
        <div class="field">
                <p class="settingsformfield"><input type="text" name="editsettings[phonenumber]" placeholder="phone number" value="<%= settings.phonenumber %>"></p>
        </div>
        
        <div class="field">
                <p class="settingsformfield"> <input type="text" name="editsettings[username]" value="<%= currentUser.username %>" readonly></p>
        </div>
        
        <!-- <div class="field">
                <p class="settingsformfield"> <input type="password" name="editsettings[password]" placeholder="password"></p>
        </div> -->
        
        
        <p class="itcorperscompleteregbutton"><button type="submit" class="btn btn-default btn-lg loginsubmitbutton">UPDATE </button></p>
        
        </form>
</div>
